<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/container" android:background="@drawable/unist_and" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/login_field" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="150dp" android:layout_weight="5">
        <EditText android:textSize="15dp" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/edit_id" android:background="@drawable/login_input" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="30dp" android:layout_marginTop="9dp" android:layout_marginRight="30dp" android:layout_marginBottom="4dp" android:hint="@string/edit_id" android:singleLine="true" android:imeOptions="actionNext"/>
        <EditText android:textSize="15dp" android:textColor="#000000" android:layout_gravity="center" android:id="@+id/edit_pw" android:background="@drawable/login_input" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:hint="@string/edit_pw" android:inputType="textPassword" android:imeOptions="actionDone"/>
        <CheckBox android:textSize="11dp" android:id="@+id/chk_login" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginLeft="27dp" android:text="@string/check_id" android:layout_below="@+id/login_field"/>
        <Button android:textSize="15dp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/login_button" android:background="@drawable/checkbox" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:text="LOGIN" android:layout_below="@+id/chk_login"/>
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="12dp" android:id="@+id/personal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:text="Large Text" android:layout_below="@+id/login_button" android:layout_alignLeft="@+id/login_button" android:layout_alignStart="@+id/login_button"/>
        <TextView android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/privacy" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Policy of Personal Information Treatment" android:layout_below="@+id/login_field"/>
    </LinearLayout>
</RelativeLayout>
