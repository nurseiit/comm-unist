<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/volume_item_container" android:paddingLeft="24dp" android:paddingRight="60dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="@dimen/mr_controller_volume_group_list_item_height">
        <TextView android:textAppearance="@style/TextAppearance.MediaRouter.SecondaryText" android:id="@+id/mr_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/mr_volume_item_icon" android:layout_width="@dimen/mr_controller_volume_group_list_item_icon_size" android:layout_height="@dimen/mr_controller_volume_group_list_item_icon_size" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:src="?attr/mediaRouteAudioTrackDrawable" android:scaleType="fitCenter"/>
            <android.support.v7.app.MediaRouteVolumeSlider android:id="@+id/mr_volume_slider" android:layout_width="match_parent" android:layout_height="40dp" android:maxHeight="40dp" android:minHeight="40dp" android:contentDescription="@string/mr_controller_volume_slider"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
